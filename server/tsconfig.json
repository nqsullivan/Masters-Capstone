{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "./dist/server",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "declaration": true
  },
  "include": ["src/**/*.ts", "scripts/**/*.ts", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
