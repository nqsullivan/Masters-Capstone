{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "controllers/**/*.ts",
    "models/**/*.ts",
    "routes/**/*.ts",
    "index.ts"
  ],
  "exclude": ["node_modules"]
}
